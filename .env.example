# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/resume_optimizer_dev

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Server
HOST=0.0.0.0
PORT=8000

# Storage Configuration
STORAGE_BACKEND=local  # Options: local, r2

# Cloudflare R2 Configuration (only needed if STORAGE_BACKEND=r2)
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=resume-uploads
R2_REGION=auto
R2_PUBLIC_URL=  # Optional: https://your-custom-domain.com
